<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">
	
	<!-- define my dependency -->
 	  <bean id="myRandomFortune"
 	  class="formation.afpa.fr.fortune.RandomFortuneService">
 	  </bean>	  
 	  	  
 	  <!-- define my bean for class RandomCoach -->
 	  <bean id="RandomCoach"
 	  class="formation.afpa.fr.RandomCoach"
 	  scope="prototype">
 	  
 	 <!-- set up constructor injection -->
 		<constructor-arg ref="myRandomFortune"/>
 	  </bean>
 	  
 </beans>